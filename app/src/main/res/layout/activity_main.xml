<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.inbeacon.inbeaconexample.MainActivity">


    <Button
        android:text="set"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_x="98dp"
        android:layout_y="257dp"
        android:id="@+id/setTag"
        android:layout_below="@+id/hasTag"
        android:layout_alignStart="@+id/hasTag"/>

    <Button
        android:text="reset"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_x="158dp"
        android:layout_y="257dp"
        android:id="@+id/resetTag"
        android:layout_below="@+id/setTag"
        android:layout_alignStart="@+id/setTag"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_x="9dp"
        android:layout_y="109dp"
        android:id="@+id/editTest"
        android:hint="Test Property"
        android:selectAllOnFocus="false"
        android:textIsSelectable="false"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/id_refresh_force"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="152dp"/>

    <Button
        android:text="Save"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_x="240dp"
        android:layout_y="139dp"
        android:id="@+id/save"
        android:layout_below="@+id/editTest"
        android:layout_alignEnd="@+id/editTag"/>

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_x="16dp"
        android:layout_y="258dp"
        android:id="@+id/editTag"
        android:selectAllOnFocus="false"
        android:textIsSelectable="false"
        android:hint="Tag"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/save"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="has"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_x="226dp"
        android:layout_y="257dp"
        android:id="@+id/hasTag"
        android:layout_alignBottom="@+id/editTag"
        android:layout_alignEnd="@+id/editTest"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Refresh force"
        android:id="@+id/id_refresh_force"
        android:layout_x="10dp"
        android:layout_y="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>


</RelativeLayout>
