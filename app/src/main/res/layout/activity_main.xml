<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.inbeacon.inbeaconexample.MainActivity">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resetTag"
        android:layout_marginTop="57dp"
        android:text="SDK by Resono http://reso.no (formerly Inbeacon)"
        android:textSize="18sp" />

    <Button
        android:text="set"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_x="98dp"
        android:layout_y="257dp"
        android:id="@+id/setTag"
        android:layout_below="@+id/hasTag"
        android:layout_alignStart="@+id/hasTag"/>

    <Button
        android:text="reset"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_x="158dp"
        android:layout_y="257dp"
        android:id="@+id/resetTag"
        android:layout_below="@+id/setTag"
        android:layout_alignStart="@+id/setTag"/>

    <EditText
        android:id="@+id/editTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_refresh_force"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="163dp"
        android:layout_x="9dp"
        android:layout_y="109dp"
        android:ems="10"
        android:hint="Test Property"
        android:selectAllOnFocus="false"
        android:textIsSelectable="false" />

    <Button
        android:id="@+id/save"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTest"
        android:layout_alignEnd="@+id/editTag"
        android:layout_marginTop="-44dp"
        android:layout_marginEnd="-225dp"
        android:layout_x="240dp"
        android:layout_y="139dp"
        android:text="Save" />

    <EditText
        android:id="@+id/editTag"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/save"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="43dp"
        android:layout_x="16dp"
        android:layout_y="258dp"
        android:ems="10"
        android:hint="Tag"
        android:selectAllOnFocus="false"
        android:textIsSelectable="false" />

    <Button
        android:id="@+id/hasTag"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignEnd="@+id/editTest"
        android:layout_alignBottom="@+id/editTag"
        android:layout_marginEnd="-32dp"
        android:layout_marginBottom="1dp"
        android:layout_x="226dp"
        android:layout_y="257dp"
        android:text="has" />


</RelativeLayout>
